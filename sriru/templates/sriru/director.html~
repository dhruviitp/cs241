$(document).ready(function() {
	$('.home').fadeIn();
	$('.msg').click(function() {
		$('.msg').children('a').removeClass('selected');
		$('.msg').children('ul').fadeOut();
		$(this).children("a").addClass('selected');
		$(this).children("ul").fadeIn();
	});
});
